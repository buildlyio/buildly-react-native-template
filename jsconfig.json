      "@app-screens/*": ["app/screens/*"],
      "@app-stacks/*": ["app/stacks/*"],
      "@app-state/*": ["app/state/*"],
      "@app-theme/*": ["app/themes/*"],
      "@assets/*": ["assets/*"],
      "@core-hooks/*": ["core/hooks/*"],
      "@core-localization": ["core/localization/*"],
      "@core-react-query/*": ["core/react-query/*"],
      "@core-services/*": ["core/services/*"],
      "@core-stacks/*": ["core/stacks/*"],
      "@core-utils/*": ["core/utils/*"],
      "@core-zustand/*": ["core/zustand/*"]
